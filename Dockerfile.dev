#STAGE 1

FROM node:lts-alpine AS build

WORKDIR /app

COPY ./package.json ./

RUN yarn install

COPY . /app

RUN yarn build

#STAGE 2

FROM nginx:stable-alpine

COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]